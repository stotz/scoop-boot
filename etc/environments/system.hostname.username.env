# ============================================================================
# CLEANUP - Remove old/duplicate PATH entries
# ============================================================================
PATH-=C:\usr\apps\perl\current\site\bin
PATH-=C:\usr\apps\perl\current\bin
PATH-=C:\usr\apps\python\current\Scripts
PATH-=C:\usr\apps\python\current
PATH-=C:\usr\apps\perl\current\perl\site\bin
PATH-=C:\usr\apps\perl\current\perl\bin
PATH-=C:\usr\apps\python313\current\Scripts
PATH-=C:\usr\apps\python313\current
PATH-=C:\usr\apps\ant\current\bin
PATH-=C:\usr\apps\maven\current\bin
PATH-=C:\usr\shims
PATH-=C:\usr\apps\vscode\current\bin
PATH-=C:\usr\apps\msys2\current\usr\bin
PATH-=C:\usr\apps\msys2\current\mingw64\bin
PATH-=C:\usr\apps\msys2\current\ucrt64\bin

# ============================================================================
# MSYS2/MinGW - LOW PRIORITY (Fallback for Unix tools)
# ============================================================================
MSYS2_HOME=C:\usr\apps\msys2\current
PATH+=$MSYS2_HOME\usr\bin
PATH+=$MSYS2_HOME\ucrt64\bin

# ============================================================================
# VERSION CONTROL
# ============================================================================
SVN_HOME=C:\usr\apps\svn\current
PATH+=$SVN_HOME\bin

GIT_HOME=C:\usr\apps\git\current
PATH+=$GIT_HOME\mingw64\bin
PATH+=$GIT_HOME\usr\bin
PATH+=$GIT_HOME\cmd
GIT_SSH=C:\usr\apps\openssh\current\ssh.exe

# ============================================================================
# C/C++ DEVELOPMENT
# ============================================================================
MAKE_HOME=C:\usr\apps\make\current
PATH+=$MAKE_HOME\bin

CMAKE_HOME=C:\usr\apps\cmake\current
PATH+=$CMAKE_HOME\bin

# ============================================================================
# NODE.JS DEVELOPMENT
# ============================================================================
NODE_HOME=C:\usr\apps\nodejs\current
PATH+=$NODE_HOME
NODE_PATH=$NODE_HOME\node_modules
NPM_CONFIG_PREFIX=C:\usr\persist\nodejs
PATH+=$NPM_CONFIG_PREFIX\bin

# ============================================================================
# PERL DEVELOPMENT
# ============================================================================
PERL_HOME=C:\usr\apps\perl\current
PATH+=$PERL_HOME\perl\site\bin
PATH+=$PERL_HOME\perl\bin
PERL5LIB=$PERL_HOME\perl\lib;$PERL_HOME\perl\site\lib

# ============================================================================
# PYTHON DEVELOPMENT
# ============================================================================
PYTHON_HOME=C:\usr\apps\python313\current
PATH+=$PYTHON_HOME\Scripts
PATH+=$PYTHON_HOME
PYTHONPATH=$PYTHON_HOME\Lib\site-packages

# ============================================================================
# KOTLIN DEVELOPMENT
# ============================================================================
KOTLIN_HOME=C:\usr\apps\kotlin\current
PATH+=$KOTLIN_HOME\bin

# ============================================================================
# JAVA DEVELOPMENT & BUILD TOOLS
# ============================================================================
ANT_HOME=C:\usr\apps\ant\current
PATH+=$ANT_HOME\bin

GRADLE_HOME=C:\usr\apps\gradle\current
PATH+=$GRADLE_HOME\bin
GRADLE_USER_HOME=$USERPROFILE\.gradle
GRADLE_OPTS=-Xmx2048m -Dorg.gradle.daemon=true -Dorg.gradle.parallel=true

MAVEN_HOME=C:\usr\apps\maven\current
PATH+=$MAVEN_HOME\bin
M2_HOME=$MAVEN_HOME
M2_REPO=$USERPROFILE\.m2\repository
MAVEN_OPTS=-Xmx1024m -XX:+TieredCompilation -XX:TieredStopAtLevel=1

JAVA_HOME=C:\usr\apps\temurin21-jdk\current
PATH+=$JAVA_HOME\bin
JAVA_OPTS=-Xmx2g -Xms512m -XX:+UseG1GC -XX:MaxGCPauseMillis=200

# ============================================================================
# CORE PATHS - HIGHEST PRIORITY (at the bottom!)
# ============================================================================
PATH+=$SCOOP\shims
PATH+=$SCOOP\bin

# ============================================================================
# LOCALE & ENCODING
# ============================================================================
LANG=en_US.UTF-8
LC_ALL=en_US.UTF-8
LANGUAGE=en_US:en

# ============================================================================
# CUSTOM
# ============================================================================
TMP=C:\tmp
TEMP=C:\tmp
USR=C:\usr
DATA=C:\data
DEVL_ROOT=C:\devl
